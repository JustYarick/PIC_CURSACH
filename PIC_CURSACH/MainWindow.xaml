<Window x:Class="PIC_CURSACH.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
        Background="{DynamicResource WindowBackground}"
        Title="Система депозитного отдела"
        Height="600" Width="1000"
        ResizeMode="CanResize"
        WindowState="Normal"
        WindowStartupLocation="CenterScreen">
    <DockPanel>
        <StackPanel DockPanel.Dock="Left" Width="200"
                    Background="{DynamicResource NavigationViewContentBackground}">
            <ui:Button Content="Клиенты" Name="ClientsBtn" Margin="10" Height="40" />
            <ui:Button Content="Депозиты" Name="DepositsBtn" Margin="10" Height="40" />
        </StackPanel>
        <Frame Name="MainContentFrame" NavigationUIVisibility="Hidden"
               Background="{DynamicResource ApplicationBackgroundBrush}"/>
    </DockPanel>
</Window>