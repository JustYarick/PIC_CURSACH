<Window x:Class="PIC_CURSACH.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
        xmlns:viewModel="clr-namespace:PIC_CURSACH.ViewModel"
        Background="{DynamicResource WindowBackground}"
        Title="Система депозитного отдела"
        Height="600" Width="1000"
        ResizeMode="CanResize"
        WindowState="Normal"
        WindowStartupLocation="CenterScreen">
    <Window.DataContext>
        <viewModel:LoginViewModel/>
    </Window.DataContext>
    <Grid Background="{DynamicResource ApplicationBackground}">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="250">
            <TextBlock Foreground="White" Text="Вход в систему" FontWeight="Bold" FontSize="20" Margin="0 0 0 18" HorizontalAlignment="Center"/>
            <ui:TextBox Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}" Margin="0 4"/>
            <ui:PasswordBox Password="{Binding Password, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Margin="0 4"/>
            <TextBlock Text="{Binding ErrorMessage}" Foreground="Red" Margin="0 4" TextWrapping="Wrap"/>
            <ui:Button Content="Войти" Command="{Binding LoginCommand}" Margin="0 12 0 0"/>
            <TextBlock Text="Для теста: admin/admin, manager/manager ..." FontSize="11" Foreground="Gray" TextWrapping="Wrap" Margin="0,20,0,0"/>
        </StackPanel>
    </Grid>
</Window>