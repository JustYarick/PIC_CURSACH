<Window x:Class="PIC_CURSACH.View.AdminWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="clr-namespace:PIC_CURSACH.View.controls"
        Background="{DynamicResource WindowBackground}"
        Title="Панель администратора" Height="600" Width="1000">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Background="#34495E" Padding="20">
            <TextBlock Foreground="White" FontSize="24" FontWeight="Bold"
                       Text="Панель администратора" />
        </Border>

        <TabControl Grid.Row="1" Margin="10" SelectionChanged="TabControl_SelectionChanged">
            <TabItem Header="Клиенты" Padding="10" Name="ClientsTab">
            </TabItem>

            <TabItem Header="Сотрудники" Padding="10" Name="EmployeesTab">
            </TabItem>

            <TabItem Header="Операции по депозитам" Padding="10" Name="OperationsTab">
            </TabItem>

            <TabItem Header="Типы депозитов" Padding="10" Name="TypesTab">
            </TabItem>

            <TabItem Header="Депозитные договоры" Padding="10" Name="ContractsTab">
            </TabItem>

            <TabItem Header="Документы" Padding="10" Name="DocumentsTab">
            </TabItem>

            <TabItem Header="Журнал аудита" Padding="10" Name="AuditTab">
            </TabItem>
        </TabControl>
    </Grid>
</Window>