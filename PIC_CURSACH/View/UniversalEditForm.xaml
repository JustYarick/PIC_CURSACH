<Window x:Class="PIC_CURSACH.View.UniversalEditForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
        xmlns:local="clr-namespace:PIC_CURSACH.View"
        xmlns:utils="clr-namespace:PIC_CURSACH.utils"
        xmlns:viewModel="clr-namespace:PIC_CURSACH.ViewModel"
        Title="{Binding WindowTitle}"
        Height="570" Width="700"
        Background="{DynamicResource ApplicationBackgroundBrush}"
        WindowStartupLocation="CenterOwner">
    <Window.Resources>
        <utils:BoolToRequiredMarkConverter x:Key="BoolToRequiredMarkConverter"/>
    </Window.Resources>
    <Window.DataContext>
        <viewModel:AdminViewModel/>
    </Window.DataContext>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <ui:TextBlock Grid.Row="0"
                      Text="{Binding WindowTitle}"
                      FontSize="20"
                      FontWeight="Bold"
                      Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                      Margin="0,0,0,20"/>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <ItemsControl ItemsSource="{Binding Fields}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Orientation="Vertical" Margin="0"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Margin="0,0,0,15">
                            <!-- Лейбл поля -->
                            <ui:TextBlock FontWeight="SemiBold" Margin="0,0,0,5"
                                          Foreground="{DynamicResource TextFillColorPrimaryBrush}">
                                <ui:TextBlock.Text>
                                    <MultiBinding StringFormat="{}{0}{1}">
                                        <Binding Path="Label"/>
                                        <Binding Path="IsRequired" Converter="{StaticResource BoolToRequiredMarkConverter}"/>
                                    </MultiBinding>
                                </ui:TextBlock.Text>
                            </ui:TextBlock>

                            <!-- Поле ввода -->
                            <ui:TextBox Text="{Binding Value, UpdateSourceTrigger=PropertyChanged}"
                                        PlaceholderText="{Binding Placeholder}"
                                        IsEnabled="{Binding IsEnabled}"
                                        MinWidth="200"/>
                        </StackPanel>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,20,0,0">
            <ui:Button Content="Отмена"
                       Command="{Binding CancelCommand}"
                       Width="100"
                       Margin="0,0,10,0"/>
            <ui:Button Content="{Binding SaveButtonText}"
                       Command="{Binding SaveCommand}"
                       Appearance="Primary"
                       Width="100"/>
        </StackPanel>
    </Grid>
</Window>