<UserControl x:Class="PIC_CURSACH.View.controls.AuditLogsTableControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:controls="clr-namespace:PIC_CURSACH.View.controls"
             Loaded="OnLoaded">
    <controls:EntityTableControl
        ItemsSource="{Binding AuditLogs}"
        SelectedItem="{Binding SelectedAuditLog, Mode=TwoWay}"
        AddCommand="{x:Null}"
        EditCommand="{x:Null}"
        DeleteCommand="{x:Null}"
        CanAdd="False"
        CanEdit="False"
        CanDelete="False">
        <controls:EntityTableControl.Columns>
            <DataGridTextColumn Header="ID" Binding="{Binding LogId}"
                                IsReadOnly="True" Width="50" />
            <DataGridTextColumn Header="Таблица" Binding="{Binding TableName}" Width="100" />
            <DataGridTextColumn Header="Операция" Binding="{Binding Operation}" Width="80" />
            <DataGridTextColumn Header="Старые значения" Binding="{Binding OldValues}" Width="*" />
            <DataGridTextColumn Header="Новые значения" Binding="{Binding NewValues}" Width="*" />
            <DataGridTextColumn Header="Изменил" Binding="{Binding ChangedBy}" Width="100" />
            <DataGridTextColumn Header="Дата/время" Binding="{Binding ChangedAt, StringFormat='dd.MM.yyyy HH:mm'}" Width="120" />
        </controls:EntityTableControl.Columns>
    </controls:EntityTableControl>
</UserControl>