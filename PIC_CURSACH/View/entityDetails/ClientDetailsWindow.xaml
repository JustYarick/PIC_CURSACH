<Window x:Class="PIC_CURSACH.View.entityDetails.ClientDetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
        Title="Редактирование клиента" Height="700" Width="800"
        Background="{DynamicResource WindowBackground}" Foreground="White"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="10">

                <!-- Основная информация -->
                <ui:CardExpander Header="Основная информация" IsExpanded="True" Margin="0,0,0,10">
                    <Grid Margin="20">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="180"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- ID клиента -->
                        <TextBlock Grid.Row="0" Grid.Column="0" Text="ID клиента:"
                                   VerticalAlignment="Center" Margin="0,0,0,12" FontWeight="SemiBold"/>
                        <ui:TextBox Grid.Row="0" Grid.Column="1"
                                    Text="{Binding ClientId}"
                                    IsReadOnly="True"
                                    Margin="0,0,0,12"/>

                        <!-- Имя -->
                        <TextBlock Grid.Row="1" Grid.Column="0" Text="Имя:"
                                   VerticalAlignment="Center" Margin="0,0,0,12" FontWeight="SemiBold"/>
                        <ui:TextBox Grid.Row="1" Grid.Column="1"
                                    Text="{Binding FirstName, UpdateSourceTrigger=PropertyChanged}"
                                    Margin="0,0,0,12"/>

                        <!-- Фамилия -->
                        <TextBlock Grid.Row="2" Grid.Column="0" Text="Фамилия:"
                                   VerticalAlignment="Center" Margin="0,0,0,12" FontWeight="SemiBold"/>
                        <ui:TextBox Grid.Row="2" Grid.Column="1"
                                    Text="{Binding LastName, UpdateSourceTrigger=PropertyChanged}"
                                    Margin="0,0,0,12"/>

                        <!-- Паспорт -->
                        <TextBlock Grid.Row="3" Grid.Column="0" Text="Паспорт:"
                                   VerticalAlignment="Center" Margin="0,0,0,12" FontWeight="SemiBold"/>
                        <ui:TextBox Grid.Row="3" Grid.Column="1"
                                    Text="{Binding Passport, UpdateSourceTrigger=PropertyChanged}"
                                    Margin="0,0,0,12"/>

                        <!-- Телефон -->
                        <TextBlock Grid.Row="4" Grid.Column="0" Text="Телефон:"
                                   VerticalAlignment="Center" Margin="0,0,0,12" FontWeight="SemiBold"/>
                        <ui:TextBox Grid.Row="4" Grid.Column="1"
                                    Text="{Binding Phone, UpdateSourceTrigger=PropertyChanged}"
                                    Margin="0,0,0,12"/>

                        <!-- Email -->
                        <TextBlock Grid.Row="5" Grid.Column="0" Text="Email:"
                                   VerticalAlignment="Center" FontWeight="SemiBold"/>
                        <ui:TextBox Grid.Row="5" Grid.Column="1"
                                    Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}"/>
                    </Grid>
                </ui:CardExpander>

                <!-- Депозитные договоры -->
                <ui:CardExpander Header="Депозитные договоры" IsExpanded="True">
                    <StackPanel Margin="20">
                        <DataGrid x:Name="ContractsDataGrid"
                                  ItemsSource="{Binding DepositContracts}"
                                  AutoGenerateColumns="False"
                                  CanUserAddRows="False"
                                  IsReadOnly="True"
                                  HeadersVisibility="Column"
                                  BorderThickness="1"
                                  MinHeight="180"
                                  SelectionMode="Single">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="ID"
                                                    Binding="{Binding ContractId}"
                                                    Width="60"/>
                                <DataGridTextColumn Header="Сумма"
                                                    Binding="{Binding Amount, StringFormat=N2}"
                                                    Width="120"/>
                                <DataGridTextColumn Header="Дата начала"
                                                    Binding="{Binding StartDate, StringFormat=d}"
                                                    Width="120"/>
                                <DataGridTextColumn Header="Дата окончания"
                                                    Binding="{Binding EndDate, StringFormat=d}"
                                                    Width="120"/>
                                <DataGridTextColumn Header="Статус"
                                                    Binding="{Binding Status}"
                                                    Width="*"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </StackPanel>
                </ui:CardExpander>

            </StackPanel>
        </ScrollViewer>

        <!-- Кнопки -->
        <ui:CardControl Grid.Row="1" Margin="20,10">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <ui:Button x:Name="SaveButton"
                           Content="Сохранить изменения"
                           Click="Save_Click"
                           Icon="{ui:SymbolIcon Save24}"
                           Appearance="Primary"
                           Margin="0,0,10,0"/>
                <ui:Button Content="Отмена"
                           Click="Cancel_Click"
                           Icon="{ui:SymbolIcon Dismiss24}"/>
            </StackPanel>
        </ui:CardControl>
    </Grid>
</Window>
